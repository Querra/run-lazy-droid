<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#90C9"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/view_timeline_card__type_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/view_timeline_card__type"
            style="@style/card_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/view_timeline_card__type_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/view_timeline_card__type_image"
            android:text="type"/>

        <TextView
            android:id="@+id/view_timeline_card__distance"
            style="@style/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_timeline_card__type"
            android:layout_below="@+id/view_timeline_card__type"
            android:drawableStart="@drawable/ic_run_white"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:layout_alignLeft="@+id/view_timeline_card__type"
            android:drawableLeft="@drawable/ic_run_white"
            android:text="distance"/>

        <TextView
            android:id="@+id/view_timeline_card__time"
            style="@style/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view_timeline_card__distance"
            android:layout_below="@+id/view_timeline_card__distance"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_time"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:layout_alignLeft="@+id/view_timeline_card__distance"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_time"
            android:text="value"/>

        <TextView
            android:id="@+id/view_timeline_card__date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/colorAccentAlphaStrong"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_alignBaseline="@+id/view_timeline_card__type"
            android:text="date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>