<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#90C9"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/view_labeled_card__label"
            style="@style/card_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="label" />

        <TextView
            android:id="@+id/view_labeled_card__value"
            style="@style/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_labeled_card__label"
            android:text="value" />

        <TextView
            android:id="@+id/view_labeled_card__message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_labeled_card__label"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/colorAccentAlphaStrong"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="message"
            android:visibility="invisible"
            android:textColor="@color/white" />
    </RelativeLayout>


</android.support.v7.widget.CardView>