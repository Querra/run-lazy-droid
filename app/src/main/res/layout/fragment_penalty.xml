<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="de.querra.mobile.runlazydroid.fragments.PenaltyFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/fragment_penalty__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="19sp"
        android:layout_marginBottom="60dp"
        android:text="@string/been_naughty"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fragment_penalty__submit"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#FFF"
        android:text="@string/yes_please"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
