<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.querra.mobile.runlazydroid.fragments.OverviewFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/wood_track" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <android.support.v7.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#90C9"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_overview__distance_label"
                            style="@style/card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance" />

                        <TextView
                            android:id="@+id/fragment_overview__distance"
                            style="@style/card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fragment_overview__distance_label"
                            android:text="distance" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#90C9"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_overview__penalty_label"
                            style="@style/card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penalty" />

                        <TextView
                            android:id="@+id/fragment_overview__penalty"
                            style="@style/card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fragment_overview__penalty_label"
                            android:text="penalty" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#90C9"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_overview__start_label"
                            style="@style/card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date" />

                        <TextView
                            android:id="@+id/fragment_overview__start"
                            style="@style/card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fragment_overview__start_label"
                            android:text="start date" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#90C9"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_overview__target_label"
                            style="@style/card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target" />

                        <TextView
                            android:id="@+id/fragment_overview__target"
                            style="@style/card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fragment_overview__target_label"
                            android:text="target" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
